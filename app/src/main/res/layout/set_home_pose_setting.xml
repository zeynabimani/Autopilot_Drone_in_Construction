<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Home Position"
        android:textSize="10pt"
        android:layout_gravity="center_horizontal">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Home Position by Distance"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#314268"
        android:textSize="15dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">
        <TextView
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home X dist:">
        </TextView>
        <EditText
            android:id="@+id/set_home_x"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned" >
        </EditText>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="Home Y dist:">
        </TextView>
        <EditText
            android:id="@+id/set_home_y"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floor_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Home Position by Current Pose"
            android:layout_marginTop="10dp"
            android:textColor="#314268"
            android:textSize="15dp">
        </TextView>
        <Button
            android:id="@+id/set_home_pose_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#314268"
            android:text="get Current Location"
            android:textSize="13dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
